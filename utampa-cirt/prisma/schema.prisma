generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Change to "postgresql" if using PostgreSQL
  url      = "mysql://root:root@localhost:3306/CIRT"
}

model User {
  id       String   @id @unique
  f_name   String   @db.VarChar(50)
  l_name   String   @db.VarChar(50)
  email    String   @unique @db.VarChar(100)
  user_role Role    @default(Author)

  articles Article[]
}

model Article {
  id         Int       @id @default(autoincrement())
  pdf_path   String    @db.VarChar(255)
  author_id  String?
  status     Status?
  type       ArticleType?

  author     User?     @relation(fields: [author_id], references: [id])
  keywords   Keyword[]
}

model Keyword {
  id         Int      @id @default(autoincrement())
  article_id Int?
  keyword    String   @db.VarChar(50)

  article    Article? @relation(fields: [article_id], references: [id])
}

enum Role {
  Reviewer
  Author
  Viewer
}

enum Status {
  Sent
  Under_Review
  Approved
  Declined
}

enum ArticleType {
  Article
  Journal
  Poster
  Paper
}
